{
  "name": "Tidy Tabs!",
  "description": "An organizer of tabs & tab groups",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/wBroom16.png",
    "48": "icons/wBroom48.png",
    "128": "icons/wBroom128.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "commands": {
    "apply_flag_1": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "Alt+Shift+1"
      },
      "description": "Flag 1: Apply to current tab"
    },
    "go_to_flag_1": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "Flag 1: Switch to flagged tab"
    },
    "apply_flag_2": {
      "suggested_key": {
        "default": "Alt+Shift+2",
        "mac": "Alt+Shift+2"
      },
      "description": "Flag 2: Apply to current tab"
    },
    "go_to_flag_2": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "Alt+2"
      },
      "description": "Flag 2: Switch to flagged tab"
    },
    "apply_flag_3": {
      "description": "Flag 3: Apply to current tab"
    },
    "go_to_flag_3": {
      "description": "Flag 3: Switch to flagged tab"
    },
    "apply_flag_4": {
      "description": "Flag 4: Apply to current tab"
    },
    "go_to_flag_4": {
      "description": "Flag 4: Switch to flagged tab"
    },
    "apply_flag_5": {
      "description": "Flag 5: Apply to current tab"
    },
    "go_to_flag_5": {
      "description": "Flag 5: Switch to flagged tab"
    },
    "apply_flag_6": {
      "description": "Flag 6: Apply to current tab"
    },
    "go_to_flag_6": {
      "description": "Flag 6: Switch to flagged tab"
    },
    "recall_tab": {
      "description": "Switch to previous tab"
    }
  },
  "permissions": ["tabs", "tabGroups", "storage"],
  "action": {
    "default_popup": "popup/popup.html"
  }
}