{
  "name": "Tidy Tabs!",
  "description": "An organizer of tabs & tab groups",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background_main.js"
  },
  "commands": {
    "apply_flag_1": {
      "suggested_key": {
        "default": "Alt+Shift+1",
        "mac": "Alt+Shift+1"
      },
      "description": "Flag 1: Apply to current tab"
    },
    "go_to_flag_1": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "Flag 1: Switch to flagged tab"
    },
    "apply_flag_2": {
      "suggested_key": {
        "default": "Alt+Shift+2",
        "mac": "Alt+Shift+2"
      },
      "description": "Flag 2: Apply to current tab"
    },
    "go_to_flag_2": {
      "suggested_key": {
        "default": "Alt+2",
        "mac": "Alt+2"
      },
      "description": "Flag 2: Switch to flagged tab"
    }
  },
  "permissions": ["tabs", "tabGroups", "storage"],
  "action": {
    "default_popup": "popup/popup.html"
  }
}